---
import SiteLayout from "@layouts/SiteLayout.astro"
import Banner from "@components/Banner.svelte"
import BrandPreviews from "@components/BrandPreviews.svelte"
import ProgramBanner from "@components/ProgramBanner.svelte"
---

<SiteLayout
    description="Test">
    <Banner customClasses={`
        h-[100vh] pt-48 md:pt-16 
        justify-center gap-12
        bg-gradient-to-t from-upls-orange to-upls-light-orange bg-no-repeat`}>
        <div class="
            w-3/4 max-w-lg lg:w-3/4 lg:max-w-3xl xl:max-w-4xl
            flex flex-col gap-8">
            <img src="graphics/brands/logo-upls-white.svg" />
            <p class="font-bold max-w-3xl mx-auto xl:pt-8">Bringing diverse people together to serve their communities is what Lions Clubs are all about. Become part of the largest service and humanitarian organization in the world. Lions and Leos are raising awareness for our causes around the world.</p>
        </div>
        <BrandPreviews client:load />
    </Banner>
    <ProgramBanner 
        title="Childhood Cancer"
        description="Lions Clubs International has adopted Childhood Cancer as an initiative on a global level. Each year, more than 300,000 children are diagnosed with cancer across the world. This means that a child is diagnosed with cancer every 2 minutes. The Lions have begun working with this initiative to explore new ways in which Lions can help children with cancer in our own communities."
        link={import.meta.env.PUBLIC_CHILDHOODCANCER_URL}
        src="/graphics/brands/logo-cc-fullcolor.svg"
        bg={["from-cc-gold", "to-cc-light-gold"]} />
    <ProgramBanner 
        title="Defense Against Diabetes"
        description="We serve to reduce the prevalence of diabetes and to improve the quality of life for those living with diabetes in our communities. During this unprecedented time, the Lions of District 10 have responded with urgency and care developing initiatives and ways to help our communities."
        link={import.meta.env.PUBLIC_DEFENSEAGAINSTDIABETES_URL}
        src="/graphics/brands/logo-dad-fullcolor.svg"
        bg={["from-dad-blue", "to-dad-light-blue"]} />
    <ProgramBanner
        title="Project KidSight"
        description="Project KidSight is a program designed to identify treatable and preventable causes of vision loss in preschool children (ages 6 months to 5 years). Children of all ages can be screened but the target of this project is preschool children."
        src="/graphics/brands/logo-pks-fullcolor.svg"
        bg={["from-pks-pink", "to-pks-light-pink"]} />
    <ProgramBanner
        title="More projects to come!"
        src="/graphics/brands/logo-hg-white.svg"
        bg={["from-hg-green", "to-hg-light-green"]} />
    <Banner>
        <div class="
            w-full max-w-2xl p-4 lg:w-3/4 lg:max-w-4xl
            bg-white rounded-3xl
            drop-shadow-white">
            <iframe
                src="https://www.google.com/maps/d/u/2/embed?mid=1aoEvqY51HWsa2EdN16vJvD9tFESNYWrY&ehbc=2E312F"
                width="640"
                height="480"
                class="w-full rounded-xl"></iframe>
        </div>
    </Banner>
</SiteLayout>